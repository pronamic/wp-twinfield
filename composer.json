{
    "name": "wp-twinfield/twinfield",
    "description": "Twinfield library for WordPress.",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Pronamic",
            "email": "info@pronamic.eu"
        }
    ],
    "autoload": {
        "psr-4": {"Pronamic\\WP\\Twinfield\\": "src/"}
    },
    "config": {
        "platform": {
            "php": "7.0.18"
        }
    },
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^2.8",
        "sensiolabs/security-checker": "^4.0",
        "satooshi/php-coveralls": "^1.0",
        "phpmd/phpmd": "^2.6",
        "wp-coding-standards/wpcs": "^0.11.0"
    },
    "scripts": {
        "post-autoload-dump": [
            "if [ -d vendor/wp-coding-standards/wpcs ]; then vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs; fi"
        ]
    }
}
