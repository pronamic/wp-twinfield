{
    "name": "pronamic/wp-twinfield",
    "description": "Twinfield library for WordPress.",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Pronamic",
            "email": "info@pronamic.eu"
        }
    ],
    "autoload": {
        "psr-4": {"Pronamic\\WordPress\\Twinfield\\": "src/"}
    },
    "config": {
        "allow-plugins": {
            "roots/wordpress-core-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": ">=7.4",
        "pronamic/wp-http": "^1.1",
        "mpdf/mpdf": "^8.0"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^6.5",
        "satooshi/php-coveralls": "^2.0",
        "sensiolabs/security-checker": "^4.1",
        "squizlabs/php_codesniffer": "^3.2",
        "automattic/wordbless": "^0.3.1",
        "pronamic/wp-coding-standards": "^1.1"
    },
    "scripts": {
        "post-autoload-dump": "php -r \"copy('vendor/automattic/wordbless/src/dbless-wpdb.php', 'wordpress/wp-content/db.php');\""
    }
}
