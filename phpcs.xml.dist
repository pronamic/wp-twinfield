<?xml version="1.0"?>

<ruleset name="Twinfield">
	<config name="installed_paths" value="../../wp-coding-standards/wpcs" />

	<rule ref="WordPress">
		<exclude name="Generic.Files.LowercasedFilename.NotFound" />

		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase" />
	</rule>

	<rule ref="WordPress.VIP.RestrictedFunctions.file_get_contents_file_get_contents">
		<exclude-pattern>/tests/tests</exclude-pattern>
	</rule>

	<rule ref="WordPress.WP.AlternativeFunctions.file_get_contents_file_get_contents">
		<exclude-pattern>/tests/tests</exclude-pattern>
	</rule>

	<rule ref="WordPress.WP.AlternativeFunctions.file_system_read_file_get_contents">
		<exclude-pattern>/tests/tests</exclude-pattern>
	</rule>
</ruleset>
